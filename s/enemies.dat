	dc.w    1		; hSprBobYCurrentSpeed
	dc.w    1	        ; hSprBobXSpeed
	dc.w    1		; hSprBobYSpeed
	dc.w	16		; hSprBobHeight
	dc.w	11		; hSprBobWidth
	dc.w	0		; hSprBobAccentCol1
	dc.w 	0		; hSprBobAccentCol2
	dc.w	2		; hBobLeftXOffset
	dc.w	3		; hBobRightXOffset
	dc.w	2		; hBobTopYOffset
	dc.w	2		; hBobBottomYOffset
	dc.w	Enemy1Modulo	; hBobBlitSrcModulo
	dc.w	Enemy1Modulo	; hBobBlitDestModulo
	dc.w	Enemy1BlitSize  ; hBobBlitSize

	ENDR