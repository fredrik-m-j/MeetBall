CopperUpdatesCachePtr:
	REPT	40
		dc.w	0		; Copper WAIT,COLOR00 instruction or NOTHING flags
		dc.l	0		; References to all tilestructs on a GAMEAREA row
	ENDR

; Keeps track of the first copper-instruction for a GAMEAREA row
GAMEAREA_ROWCOPPER:
	REPT	33
		dc.l	0               ; Adress into copperlist
		dc.l    0               ; Bytecount: sum of bytes = 1 rasterline worth of copperinstructions
	ENDR