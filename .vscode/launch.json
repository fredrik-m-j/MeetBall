{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Debug",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/uae/dh0/InsanoBall",
            "remoteProgram": "SYS:InsanoBall",
            "emulatorType": "winuae",
            "emulatorArgs": [
                // "-s",
                // "quickstart=a1200,1",
                // "-r",
                // "C:/Users/Public/Amiga/Kickstart3.1.rom",
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0",
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Run",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/uae/dh0/InsanoBall",
            "noDebug": true,
            "remoteProgram": "SYS:InsanoBall",
            "emulatorType": "winuae",
            "emulatorArgs": [
                // "-s",
                // "quickstart=a1200,1",
                // "-r",
                // "C:/Users/Public/Amiga/Kickstart3.1.rom",
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0",
            ],
            "preLaunchTask": "amigaassembly: build"
        }
    ]
}