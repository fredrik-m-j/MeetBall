{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "winuae",
            "request": "launch",
            "name": "WinUAE Debug",
            "stopOnEntry": true,
            "serverName": "localhost",
            "serverPort": 2345,
            "startEmulator": true,
            "trace": false,
            "exceptionMask": 8188,
            "emulatorStartDelay": 1500,
            "emulator": "${config:amiga-assembly.binDir}/winuae.exe",
            "emulatorWorkingDir": "${config:amiga-assembly.binDir}",
            "program": "${workspaceFolder}/uae/dh0/main",
            "options": [
                "-s",
                "quickstart=a500,1",
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0",
                "-s",
                "debugging_trigger=SYS:main",
                "-s",
                "debugging_features=gdbserver"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "uae-run",
            "request": "launch",
            "name": "WinUAE Run",
            "emulator": "${config:amiga-assembly.binDir}/winuae.exe",
            "emulatorWorkingDir": "${config:amiga-assembly.binDir}",
            "options": [
                "-s",
                "quickstart=a500,1",
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0"
            ],
            "preLaunchTask": "amigaassembly: build"
        }
    ]
}